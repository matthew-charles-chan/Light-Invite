<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <!-- Bootstrap Core CSS -->
   <link href="/bootstrap-style/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

   <!-- Custom Fonts -->
   <link href="/bootstrap-style/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
   <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
   <link href="/bootstrap-style/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Lora|Poppins&display=swap" rel="stylesheet">

   <!-- Custom CSS -->
   <link href="/bootstrap-style/css/stylish-portfolio.css" rel="stylesheet">
   <link rel="stylesheet" href="/styles/poll.css">


  <title>Document</title>
</head>
<body>
  <nav>
    <h3>Light Schedule</h3>
    <p>Organize Your Event In A Few Simple Clicks</p>
  </nav>
  <main class="text-center">
    <div id='availabilty'>
        <header>
            <h1>
              Select Preferred Availability
            </h1>
          </header>
      <form action="/event/<%= user_id %>/poll" METHOD='POST'>
        <div id='display-poll'></div>
        <ul>
            <% dates.forEach(date => { %>
            <% let { id, start_time, end_time } = date; %>
            <li>
              <div class="checked">
                <input type="radio" name='<%= id %>' value = 1 required>
                <label for="yes">YES</label>
                <input type="radio" name='<%= id %>' value = 0 required>
                <label for="no">NO</label>
              </div>
              <%= start_time %> Until <%= end_time %>
            </li>
            <% }); %>
        </ul>
        <% if(!user_name) { %>
          <br>
          <input type="text" name='name' placeholder="Enter Name" required>
        <button type="submit" class="btn btn-primary btn-xl">Submit</button>
        <br>
        </form>
      <% } else { %>
        <br>
        <table>
          <tr>
            <th>Name:</th>
            <td><%= user_name %></td>
          </tr>
          <tr>
            <th>Email:</th>
            <td><%= email%></td>
          </tr>
        </table>
        <br>
        <button type="button" class="btn btn-primary btn-xl" id="updateInfo">Update</button>
        <button type="submit" class="btn btn-primary btn-xl">Submit</button>
        </form>
      <% } %>
      <section id="updateSection">
        <form action='/event/<%= user_id %>/updateInfo' method='POST'>
          <input type="text" name='name' placeholder="Name" required>
          <input type="email" name='email' placeholder="Email" required>
          <br>
        <button type="sumbit" id='update' class="btn btn-primary btn-xl" formmethod="POST" formaction="/event/<%= user_id %>/updateInfo">Update</button>
        </form>
      </section>
    </div>
  </main>
</body>
  <script src="/bootstrap-style/vendor/jquery/jquery.min.js"></script>
  <script src="/scripts/poll.js"></script>
</html>
